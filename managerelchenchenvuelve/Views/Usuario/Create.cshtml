@model managerelchenchenvuelve.Models.Useres
@{
    Layout = "_Layout";
    ViewData["Title"] = "Crear Usuario";
    var roles = ViewBag.Roles as List<managerelchenchenvuelve.Models.Role>;
    var company = ViewBag.Compania as List<managerelchenchenvuelve.Models.Company>;
    
 
} 
 
@if (ViewBag.Error != null)
{
    <div class="alert alert-dismissible fade show" role="alert"
         style="background-color: #dc3545; color: white;">
        @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert"  aria-label="Cerrar"></button>
    </div>
}


<div class="card-custom">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Crear Nuevo Usuario</h2>
      
    </div>
 
     
        <div class="card-body">
        
             <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="UserName" name="UserName" class="form-label">Usuario *</label>
                    <input asp-for="UserName" name="UserName"  class="form-control" required maxlength="256" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Email" name="Email" class="form-label">Correo Electrónico</label>
                    <input asp-for="Email" name="Email" class="form-control" type="email" maxlength="256" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Names" name="Names" class="form-label">Nombres *</label>
                    <input asp-for="Names" name="Names" class="form-control" required maxlength="30" />
                    <span asp-validation-for="Names" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Lastname" name="Lastname" class="form-label">Apellidos *</label>
                    <input asp-for="Lastname" name="Lastname" class="form-control" required maxlength="30" />
					<span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PhoneNumber" name="PhoneNumber" class="form-label">Teléfono</label>
                    <input asp-for="PhoneNumber" name="PhoneNumber" class="form-control" maxlength="20" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PasswordHash" name="PasswordHash" class="form-label">Contraseña *</label>
                    <input asp-for="PasswordHash" name="PasswordHash" class="form-control" type="password" required minlength="6" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Rol *</label>
                    <select name="RoleId" class="form-select" required>
                        <option selected disabled value="">Seleccione un rol</option>
                        @foreach (var role in roles)
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Gestion" class="form-label"> Compañía *</label>
                    <select asp-for="Gestion" name="Gestion" class="form-select" required>
                        <option selected disabled value="">Seleccione una Compañía</option>
                        @foreach (var compa in company)
                        {
                            <option value="@compa.Codigo">@compa.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>  

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 