                            </div>
                        </th>
                        <th style="min-width:50px; width: 100px; top: 0px; z-index: 100;">
                            <div class="mat-sort-header-container" style="cursor:pointer;">
                                @{
                                    string sortOrderAct = Context.Request.Query["sortOrder"];
                                    string campoOrderAct = "FechaActualizacion";  
                                    string nextOrderAct = sortOrderAct == "asc" && Context.Request.Query["Campo"] == campoOrderAct ? "desc" : "asc";
                                    string iconAct = sortOrderAct == "asc" && Context.Request.Query["Campo"] == campoOrderAct ? "↑" :
                                                     (sortOrderAct == "desc" && Context.Request.Query["Campo"] == campoOrderAct ? "↓" : "");
                                                      
                                    var queryParamsAct = new Dictionary<string, string>(); 
                                    foreach (var key in Context.Request.Query.Keys)
