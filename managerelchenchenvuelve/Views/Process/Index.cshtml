                                    string campoOrderFFormate = "FechaFormateada";  
                                    string nextOrderFFormate = sortOrderFFormate == "asc" && Context.Request.Query["Campo"] == campoOrderFFormate ? "desc" : "asc";
                                    string iconFFormate = sortOrderFFormate == "asc" && Context.Request.Query["Campo"] == campoOrderFFormate ? "↑" :
                                    (sortOrderFFormate == "desc" && Context.Request.Query["Campo"] == campoOrderFFormate ? "↓" : "");

                                    var queryParamsFFormate = new Dictionary<string, string>();
                                    foreach (var key in Context.Request.Query.Keys)
                                    {
                                        queryParamsFFormate[key] = Context.Request.Query[key];
                                    }
                                    queryParamsFFormate["Campo"] = campoOrderFFormate;
                                    queryParamsFFormate["sortOrder"] = nextOrderFFormate;
                                    queryParamsFFormate["page"] = ViewBag.CurrentPage.ToString();
                                    var urlFFormate = Url.Action("Index", queryParamsFFormate);
                                }
                                <a href="@urlFFormate" style="text-decoration:none; color:inherit;">
                                    Fecha de Creación @Html.Raw(iconFFormate)
