                    </tr>
                </thead>
                <!--====================================== DATA PRINCIPAL =================================================================--> 
                <tbody>
                    @if (Model is IEnumerable<managerelchenchenvuelve.Models.DatosReca> formularios)
                    {
                        if (formularios == null || !formularios.Any())
                        {
                            <tr>
                                <td colspan="8" style="text-align: center; font-style: italic; color: gray;">
                                    "Sin Solicitud para ser atendida". 
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in formularios)
                            {  <tr>  

                                  @if (puedeEditar ){
                                     <td style="min-width: 30px; width: 30px;">
                                        <div class="d-flex align-items-center" >
                                            <input type="checkbox" class="form-check-input tarea-checkbox" style="width: 20px; height: 20px;" data-id="@item.Id" onchange="actualizarSeleccion()" @(item.Etapa == "Solicitud de Cambio" || item.Etapa == "Completada" ? "disabled" : "")>
