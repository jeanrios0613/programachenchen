                                    queryParamsAct["Campo"] = campoOrderAct;
                                    queryParamsAct["sortOrder"] = nextOrderAct;
                                    queryParamsAct["page"] = ViewBag.CurrentPage.ToString();
                                    var urlAct = Url.Action("Index", queryParamsAct);
